generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Member {
  id             String   @id @default(uuid())
  firstName      String
  lastName       String
  email          String   @unique
  phone          String?
  section        String?
  season         String
  tuitionAmount  Float    @default(1000)
  contractSigned Boolean  @default(false)
  payments       Payment[]
  tuitionEdits   TuitionEditLog[] @relation("TuitionEdits")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
}

model Payment {
  id              String   @id @default(uuid())
  memberId        String
  amountPaid      Float
  paymentMethod   String
  stripePaymentId String?
  paymentDate     DateTime
  note            String?
  isActive        Boolean  @default(true)
  member          Member   @relation(fields: [memberId], references: [id])
  createdAt       DateTime @default(now())
  updatedAt       DateTime @updatedAt
}

model UnmatchedPayment {
  id              String   @id @default(uuid())
  stripePaymentId String   @unique
  amountPaid      Float
  paymentDate     DateTime
  cardLast4       String?
  customerName    String?
  notes           String?
  createdAt       DateTime @default(now())
}

model TuitionEditLog {
  id        String   @id @default(cuid())
  memberId  String
  oldAmount Int
  newAmount Int
  editedBy  String // store admin email or name
  editedAt  DateTime @default(now())

  member    Member  @relation("TuitionEdits", fields: [memberId], references: [id])
}